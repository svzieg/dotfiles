set sendmail="msmtp -a photography"
set signature="~/.mutt/signatures/default"

#GPG
set pgp_use_gpg_agent = yes
set pgp_timeout       = 3600
set pgp_autosign      = yes
set nm_record         = yes # Wird vom Exchange verwaltet
set record            = +Photography/Sent
set trash             = +Photography/Trash

# SMIME
set crypt_autosign           = yes
set crypt_replyencrypt       = yes
set crypt_replysign          = yes
set crypt_replysignencrypted = yes

set smime_default_key  = "B2D503B909502B6EB52FE7008D927C5A6A952429"
set smime_encrypt_with = "rsa2048"
