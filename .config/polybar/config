[module/checkupdates]
type = custom/script
exec = ~/.config/polybar/scripts/checkupdates.sh 
interval = 3600
click-left = "alacritty -e yay -Syua" &
format-underline = #FFFFFF
format-prefix = "Updates: "
format = <label>


[module/network-networkmanager]
